{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently 'npm:dev:css' 'remix dev' 'npm:json-server'",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css --watch",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "lint": "eslint app --max-warnings=0 && prettier app --write",
    "postinstall": "remix setup node",
    "json-server": "json-server --watch db.json --port 3001"
  },
  "dependencies": {
    "@remix-run/react": "1.3.3",
    "@remix-run/serve": "1.3.3",
    "@remix-run/vercel": "1.3.3",
    "@remix-validated-form/with-yup": "2.0.1",
    "cross-env": "7.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.3.3",
    "remix-validated-form": "4.1.8"
  },
  "devDependencies": {
    "@faker-js/faker": "6.0.0",
    "@remix-run/dev": "1.3.3",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "10.4.4",
    "concurrently": "7.0.0",
    "dotenv": "16.0.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "json-server": "0.17.0",
    "postcss": "8.4.12",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "0.1.8",
    "tailwind-merge": "1.2.1",
    "tailwindcss": "3.0.23",
    "tiny-invariant": "1.2.0",
    "typescript": "4.6.3",
    "yup": "0.32.11"
  }
}
