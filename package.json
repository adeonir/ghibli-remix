{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently 'npm run dev:css' 'remix dev'",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css --watch",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "lint": "eslint app --max-warnings=0 && prettier app --write",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "1.2.2",
    "@remix-run/serve": "1.2.2",
    "cross-env": "7.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.2.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.2.2",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "autoprefixer": "10.4.2",
    "classnames": "2.3.1",
    "concurrently": "7.0.0",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "postcss": "8.4.6",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.7",
    "tailwindcss": "3.0.23",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
